.table_caption Model info
%table.key_value_info
  %tbody
    = table_info_row motif, :gene_names, html_options: {value_column_html: {class: "#{species.downcase}_gene_name"} }
    = table_info_row motif, :full_name #, html_options: {value_column_html: {class: 'motif_name'} }
    = table_info_row motif, :model_arity_type #, html_options: {value_column_html: {class: 'motif_name'} }
    = table_info_row motif, :big_logo, html_options: {value_column_html: {class: 'sequence_logo'} }
    = table_info_row motif, :big_logo_revcomp, html_options: {value_column_html: {class: 'sequence_logo'} }
    = table_info_row motif, :origin
    = table_info_row motif, :model_length
    = table_info_row motif, :quality, header_cell: ('Quality' + help_icon(href: help_path(anchor: 'description_quality_score'), title: 'Click for details on quality assessment')).html_safe
    = table_info_row motif, :consensus
    = table_info_row motif, :auc, html_options: {value_column_html: {class: 'AUC'} }, header_cell: ('wAUC' + help_icon(href: help_path(anchor: 'description_auc'), title: 'Click for details on AUC')).html_safe
    = table_info_row motif, :max_auc, html_options: {value_column_html: {class: 'AUC'} }, header_cell: ('Best AUC' + help_icon(href: help_path(anchor: 'description_auc'), title: 'Click for details on AUC')).html_safe
    = table_info_row motif, :num_datasets, html_options: {value_column_html: {class: 'num_datasets'} }
    = table_info_row motif, :num_words_in_alignment, html_options: {value_column_html: {class: 'num_words_in_alignment'} }
    = table_info_row motif, :motif_families, html_options: {value_column_html: {class: 'motif-family'} }
    = table_info_row motif, :motif_subfamilies, html_options: {value_column_html: {class: 'motif- subfamily'} }
    - if species == 'HUMAN'
      = table_info_row motif, :hgnc_ids, html_options: {value_column_html: {class: 'hgnc_id'} }
    - else
      = table_info_row motif, :mgi_ids, html_options: {value_column_html: {class: 'mgi_id'} }
    = table_info_row motif, :entrezgene_ids, html_options: {value_column_html: {class: 'gene_id'} }
    = table_info_row motif, :uniprot_id, html_options: {value_column_html: {class: 'uniprot_id'} }
    = table_info_row motif, :uniprot_acs, html_options: {value_column_html: {class: 'uniprot_ac_and_tfclass'} }
    = table_info_row motif, :comment
    = table_info_row motif, :downloads, header_cell: 'Downloads' do |m|
      = m.download_pcm
      %br
      = m.download_pwm
      %br
      = m.download_alignment
      %br
      = m.download_precalculated_thresholds
    = table_info_row motif, :thresholds, header_cell: 'Standard thresholds' do |m|
      %table.thresholds
        %thead
          %tr
            %th
              P-value
              .has-tooltip.help-icon{data:{toggle: 'tooltip', placement: 'bottom', title: 'P-value calculated under uniform background model'}}
            %th Threshold
        %tbody
          - m.standard_thresholds.each do |pvalue, threshold|
            %tr
              %td= pvalue
              %td= threshold

.matrix_container
  %span.title PCM
  = motif.pcm

.matrix_container
  %span.title PWM
  = motif.pwm
